# ============================================================================
# WordPress Wine Website - .gitignore
# ============================================================================

# ============================================================================
# WordPress Core Files (Don't commit WordPress core)
# ============================================================================
/wp-admin/
/wp-includes/
/wp-*.php
/xmlrpc.php
/readme.html
/license.txt

# ============================================================================
# WordPress Config (Contains sensitive database credentials)
# ============================================================================
wp-config.php
wp-config-local.php
.htaccess

# ============================================================================
# WordPress Uploads (User-generated content - too large for git)
# ============================================================================
wp-content/uploads/
wp-content/upgrade/
wp-content/backup-db/
wp-content/backups/
wp-content/blogs.dir/
wp-content/cache/

# ============================================================================
# Default WordPress Themes & Plugins
# Keep your custom theme and plugins, exclude default ones
# ============================================================================
wp-content/themes/twenty*/
wp-content/plugins/akismet/
wp-content/plugins/hello.php

# ============================================================================
# Node.js Dependencies
# ============================================================================
node_modules/
npm-debug.log
yarn-error.log
package-lock.json
yarn.lock

# ============================================================================
# Build Files (Can be regenerated with npm run build)
# ============================================================================
wp-content/plugins/wine-react-blocks/build/
*.asset.php

# ============================================================================
# Local Environment Files
# ============================================================================
.env
.env.local
.env.*.local
local-*.sql
*.sql.gz

# ============================================================================
# IDE & Editor Files
# ============================================================================
.vscode/
.idea/
*.sublime-project
*.sublime-workspace
.DS_Store
Thumbs.db
*.swp
*.swo
*~

# ============================================================================
# OS Files
# ============================================================================
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
desktop.ini

# ============================================================================
# Log Files
# ============================================================================
*.log
error_log
debug.log
/logs/
*.err

# ============================================================================
# Temporary Files
# ============================================================================
*.tmp
*.temp
*.bak
*.swp
*~.nib
.sass-cache/
.cache/

# ============================================================================
# WordPress Debug Files
# ============================================================================
wp-content/debug.log

# ============================================================================
# Composer (if using)
# ============================================================================
/vendor/
composer.lock

# ============================================================================
# Testing
# ============================================================================
phpunit.xml
/tests/

# ============================================================================
# WordPress Sitemap
# ============================================================================
sitemap.xml
sitemap.xml.gz

# ============================================================================
# WP-CLI
# ============================================================================
wp-cli.local.yml

# ============================================================================
# CUSTOM: Keep These (Your Custom Work)
# ============================================================================
# DO commit these:
# !wp-content/themes/potential-theme/
# !wp-content/plugins/wine-react-blocks/

# But exclude their build artifacts:
wp-content/themes/potential-theme/node_modules/

