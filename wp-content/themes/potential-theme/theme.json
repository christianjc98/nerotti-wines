{
	"$schema": "https://schemas.wp.org/wp/6.4/theme.json",
	"version": 2,
	"settings": {
		"appearanceTools": true,
		"color": {
			"palette": [
				{
					"slug": "burgundy",
					"color": "#722F37",
					"name": "Burgundy"
				},
				{
					"slug": "wine-red",
					"color": "#8B3A3A",
					"name": "Wine Red"
				},
				{
					"slug": "cream",
					"color": "#FAF7F2",
					"name": "Cream"
				},
				{
					"slug": "off-white",
					"color": "#F5F2ED",
					"name": "Off White"
				},
				{
					"slug": "charcoal",
					"color": "#2C2C2C",
					"name": "Charcoal"
				},
				{
					"slug": "dark-gray",
					"color": "#4A4A4A",
					"name": "Dark Gray"
				},
				{
					"slug": "gold",
					"color": "#D4AF37",
					"name": "Gold"
				},
				{
					"slug": "white",
					"color": "#FFFFFF",
					"name": "White"
				}
			],
			"gradients": [
				{
					"slug": "burgundy-to-black",
					"gradient": "linear-gradient(135deg, #722F37 0%, #2C2C2C 100%)",
					"name": "Burgundy to Black"
				}
			],
			"custom": true,
			"customDuotone": true,
			"customGradient": true,
			"defaultGradients": false,
			"defaultPalette": false,
			"link": true
		},
		"layout": {
			"contentSize": "1200px",
			"wideSize": "1400px"
		},
		"spacing": {
			"padding": true,
			"margin": true,
			"blockGap": true,
			"units": ["px", "em", "rem", "vh", "vw", "%"],
			"spacingScale": {
				"steps": 0
			},
			"spacingSizes": [
				{
					"slug": "30",
					"size": "0.5rem",
					"name": "X-Small"
				},
				{
					"slug": "40",
					"size": "1rem",
					"name": "Small"
				},
				{
					"slug": "50",
					"size": "1.5rem",
					"name": "Medium"
				},
				{
					"slug": "60",
					"size": "2rem",
					"name": "Large"
				},
				{
					"slug": "70",
					"size": "3rem",
					"name": "X-Large"
				},
				{
					"slug": "80",
					"size": "4rem",
					"name": "XX-Large"
				}
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Playfair Display\", Georgia, serif",
					"slug": "heading",
					"name": "Heading (Serif)"
				},
				{
					"fontFamily": "-apple-system, BlinkMacSystemFont, \"Segoe UI\", Roboto, \"Helvetica Neue\", Arial, sans-serif",
					"slug": "body",
					"name": "Body (Sans-serif)"
				}
			],
			"fontSizes": [
				{
					"slug": "small",
					"size": "0.875rem",
					"name": "Small"
				},
				{
					"slug": "medium",
					"size": "1rem",
					"name": "Medium"
				},
				{
					"slug": "large",
					"size": "1.25rem",
					"name": "Large"
				},
				{
					"slug": "x-large",
					"size": "1.75rem",
					"name": "X-Large"
				},
				{
					"slug": "xx-large",
					"size": "2.5rem",
					"name": "XX-Large"
				},
				{
					"slug": "xxx-large",
					"size": "3.5rem",
					"name": "XXX-Large"
				}
			],
			"fontWeight": true,
			"lineHeight": true,
			"customFontSize": true,
			"dropCap": true
		},
		"custom": {
			"lineHeight": {
				"body": 1.7,
				"heading": 1.3
			}
		}
	},
	"styles": {
		"color": {
			"background": "var(--wp--preset--color--cream)",
			"text": "var(--wp--preset--color--charcoal)"
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--body)",
			"fontSize": "var(--wp--preset--font-size--medium)",
			"lineHeight": "1.7"
		},
		"spacing": {
			"blockGap": "1.5rem"
		},
		"elements": {
			"link": {
				"color": {
					"text": "var(--wp--preset--color--burgundy)"
				},
				":hover": {
					"color": {
						"text": "var(--wp--preset--color--wine-red)"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":focus": {
					"color": {
						"text": "var(--wp--preset--color--wine-red)"
					}
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontWeight": "700",
					"lineHeight": "1.3"
				},
				"color": {
					"text": "var(--wp--preset--color--charcoal)"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xxx-large)",
					"lineHeight": "1.2"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"lineHeight": "1.2"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"lineHeight": "1.3"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)",
					"lineHeight": "1.4"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.4"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"lineHeight": "1.4",
					"textTransform": "uppercase",
					"letterSpacing": "0.05em"
				}
			},
			"button": {
				"color": {
					"background": "var(--wp--preset--color--burgundy)",
					"text": "var(--wp--preset--color--cream)"
				},
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "600",
					"letterSpacing": "0.05em"
				},
				"border": {
					"radius": "0"
				},
				"spacing": {
					"padding": {
						"top": "1rem",
						"right": "2rem",
						"bottom": "1rem",
						"left": "2rem"
					}
				},
				":hover": {
					"color": {
						"background": "var(--wp--preset--color--wine-red)",
						"text": "var(--wp--preset--color--white)"
					}
				},
				":focus": {
					"color": {
						"background": "var(--wp--preset--color--wine-red)",
						"text": "var(--wp--preset--color--white)"
					}
				}
			}
		},
		"blocks": {
			"core/button": {
				"variations": {
					"outline": {
						"color": {
							"text": "var(--wp--preset--color--burgundy)",
							"background": "transparent"
						},
						"border": {
							"color": "var(--wp--preset--color--burgundy)",
							"width": "2px",
							"style": "solid"
						},
						":hover": {
							"color": {
								"text": "var(--wp--preset--color--cream)",
								"background": "var(--wp--preset--color--burgundy)"
							}
						}
					}
				}
			},
			"core/heading": {
				"color": {
					"text": "var(--wp--preset--color--charcoal)"
				}
			},
			"core/post-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"fontWeight": "700"
				}
			},
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--heading)",
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"fontWeight": "700",
					"letterSpacing": "0.05em"
				},
				"color": {
					"text": "var(--wp--preset--color--charcoal)"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "500",
					"letterSpacing": "0.05em"
				}
			}
		}
	},
	"templateParts": [
		{
			"name": "header",
			"title": "Header",
			"area": "header"
		},
		{
			"name": "footer",
			"title": "Footer",
			"area": "footer"
		},
		{
			"name": "hero",
			"title": "Hero Section",
			"area": "uncategorized"
		}
	],
	"customTemplates": [
		{
			"name": "page-home",
			"title": "Home Page Template",
			"postTypes": ["page"]
		},
		{
			"name": "page-default",
			"title": "Default Page Template",
			"postTypes": ["page", "wine"]
		},
		{
			"name": "single-wine",
			"title": "Wine Product Template",
			"postTypes": ["wine"]
		}
	]
}
